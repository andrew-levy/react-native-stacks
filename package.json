    "copyfiles": "^2.4.1",
    "esbuild": "^0.8.50",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "repository": {
    "type": "git",
